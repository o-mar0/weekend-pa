<div class="app-container">
  <div class="container-body">
    <h1>This Week</h1>
    <% @tasks_categories.each do |category| %>
      <div class="card-category">
        <h2><%= category[0].capitalize %></h2>
        <ul class="list">
          <% category[1].each do |task| %>
            <%= link_to task_path(task), class: 'btn-link' do %>
              <li class="list-item">
                <div class="list-item-left">
                  <% if task.status %>
                    <i class="far fa-check-circle"></i>
                  <% else %>
                    <i class="far fa-circle"></i>
                  <% end %>
                  <%= task.title %>
                </div>
                <i class="fas fa-chevron-right"></i>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="js-map"></div>
