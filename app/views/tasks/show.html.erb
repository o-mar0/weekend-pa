<div class="app-container">
  <div class="container-body">
    <p><%= @task.category.label %></p>
    <h1><%= @task.title %></h1>
    <%= link_to 'Edit', edit_task_path(@task), class: 'btn-link' %>
    <%= link_to '+', task_path(@task), class: 'btn-delete', method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?"} %>
    <p><%= @task.location %></p>
  </div>
</div>
