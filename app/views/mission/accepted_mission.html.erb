<div class="app-container">
  <div class="form-container js-mission">
    <div class="js-map map"></div>

    <div class="form-cards">
      <% @display_tasks.each do |location_task_id| %>
        <% location_task = location_task_id[1][:location_task] %>
        <div class="checkbox js-task-location" data-latitude="<%= location_task.latitude %>" data-longitude="<%= location_task.longitude %>" data-task-id="<%= location_task.id %>">
          <% if location_task_id[1].key? :categories %>
            <% location_task_id[1][:categories].each do |category_and_tasks| %>
              <% category_and_tasks.each do |category, tasks| %>
                <div class="js-category-card js-category" data-category-name="<%= category.name %>">
                  <ul class="task">
                    <li class="list-item-title">
                      <h1><%= category.label %></h1>
                      <% tasks.each do |task| %>
                        <div>
                          <%= simple_form_for task, remote: true do |f| %>
                            <%= f.input :status, label: task.title %>
                            <%= f.submit %>
                          <% end %>
                        </div>
                      <% end %>
                    </li>
                  </ul>
                </div>
              <% end %>
            <% end %>
          <% end %>
          <h1>THIS IS A LOCATION TASK</h1>
          <ul class="task">
            <li class="list-item-title">
              <%= simple_form_for location_task_id[1][:location_task], remote: true do |f| %>
                <%= f.input :status, label: location_task_id[1][:location_task].title %>
                <%= f.submit %>
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>
      <div class="js-final-step task-final">
        <h1>Final Step</h1>
        This is the final step, congratulations!!
      </div>
      <div class="mission-toolbar text-right">
        <button class="js-next-btn btn-submit">Next</button>
      </div>
    </div>
  </div>
</div>
